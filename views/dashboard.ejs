<%- include('partials/header') -%>

<h2 class="mt-3">
  Hello <%=user.userName[0].toUpperCase() + user.userName.substr(1)%>
</h2>
<h1 class="mx-auto text-center">Check out the menu.</h1>
<div class="container">
  <div
    class="
      d-flex
      flex-row
      align-content-between
      justify-content-between
      flex-wrap
      mt-5
    "
    style="width: 70%; margin: auto"
  >
    <% for(var i=0; i < items.length; i++) {%>

    <div class="card mb-5" style="width: 15rem">
      <img class="card-img-top" src="/images/logo.png" alt="Card image cap" />
      <div class="card-body">
        <h5 class="card-title"><%= items[i].name%></h5>
        <p class="card-text"><%= items[i].desc%></p>
        <p class="card-text"><%= items[i].course%></p>
        <button class="orderCards btn btn-primary" value="<%= items[i]._id%>">
          Add/Remove from order
        </button>
        <% if(user.isAdmin){ %>
        <form
          action="/items/deleteItem/<%= items[i]._id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary mt-2" type="submit">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>

<form id="orderForm" action="/orders/addOrder" method="POST">
  <input name="orders" id="orders" type="text" hidden />
  <button
    class="btn btn-primary"
    type="submit"
    style="width: 10%; margin: 0 auto; display: block"
  >
    Submit Order
  </button>
</form>
<script src="/javascript/order.js"></script>
<%- include('partials/footer') -%>
